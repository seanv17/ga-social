<div id="notifications">
  <div class="dropdown notification-dropdown">
    <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" id="dropdownMenu1" type="button"
    aria-haspopup="true" aria-expanded="true">
      <%= current_user.notifications.where(read: false).count %>
      <span class="glyphicon glyphicon-flag"></span>
    </button>
    <ul class="dropdown-menu" aria-labeledby="dropdownMenu1">
      <li class="dropdown-header text-center">Notifications</li>
        <%= render current_user.notifications.where(read: false) %>
      <li class="divider" role="separator"></li>
      <li class="text-center"><%= link_to 'View All', notifications_path %></li>
    </ul>
  </div>
</div>
