<!-- This partial is called in the new.js.erb which pops up the modal  -->

<% @conversation = Conversation.new %>
<% @user = current_user %>
<%= form_for @conversation do |f| %>
  <div class="row">
    <div class="well col-md-4 col-md-offset-4">
      <div class="form-group">
        <%= select_tag :user_id, options_from_collection_for_select(@recipients, :id, :first_name) %>
      </div>
      <div>
        <%= text_field_tag :subject, nil, placeholder: "Subject" %>
      </div>
      <div>
        <%= text_area_tag :body, nil, placeholder: "Enter comment here" %>
      </div>
      <div>
        <center><%= f.submit "Save", class: "btn btn-success" %></center>
      </div>
    </div>
<% end %>
  </div>
