<div class="container-fluid">
  <div class="row"
    <!-- BEGIN NAVBAR -->
    <div id="mainNav">
      <nav class="navbar navbar-default navbar-fixed-top">
        <div class="container-fluid">
          <!-- Brand and toggle get grouped for better mobile display -->
          <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#hamburger" aria-expanded="false">
              <span class="sr-only">Toggle navigation</span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
              <span class="icon-bar"></span>
            </button>
              <%= link_to(image_tag('/assets/ga-logo.png', :class => "brand"), splash_path) %>
              <%= link_to "GA Social", splash_path, class: "navbar-brand page-scroll" %>
          </div>
    â€‹
          <!-- Collect the nav links, forms, and other content for toggling -->
          <div class="collapse navbar-collapse" id="hamburger">
            <ul class="nav navbar-nav navbar-right">
              <% if user_signed_in? %>
              <!-- Render notifications dropdown partial -->
              <li><%= render '/notifications/notifications' %></li>
              <li><%= link_to "Cohort", users_path %></li>
              <li><%= link_to "Posts", posts_path %></li>
              <li><%= link_to current_user.first_name.capitalize + "'s Profile", user_path(current_user.id) %></li>
              <li><%= link_to "Start a conversation", conversations_path %></li>
              <li><%= link_to "About", aboutus_path %></li>
              <% end %>
              <!-- links before dropdown go here in li tags -->
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                    <i class="fa fa-cog icon-white" aria-hidden="true"></i>
                  <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                  <%if user_signed_in? %>
                    <li><%= link_to("Sign Out", destroy_user_session_path, :method => :delete) %></li>
                  <%else%>
                    <li><%= link_to "Log In", new_user_session_path %></li>
                  <% end %>
                </ul>
              </li>
            </ul>
          </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
      </nav>
    </div>
  </div><br><br><br>
  <!-- END NAVBAR -->
  <div class="row">
    <% flash.each do |name, msg| %>
      <% if name == "notice"%>
        <strong id="flash-notice"> <%= name.capitalize %>: <%= msg %></strong>
      <% elsif name == "error" || name == "alert" %>
        <strong id="flash-error"> <%= name.capitalize %>: <%= msg %> </strong>
      <% end %>
    <% end %>
  </div>
</div>
